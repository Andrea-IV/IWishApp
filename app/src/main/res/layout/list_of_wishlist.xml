<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/wishButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="start|center_vertical"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/example"
            app:border_width="2dp"
            app:border_color="@color/ghost"/>

        <TextView
            android:id="@+id/wishlistText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="20sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/comfortaalight" />
        <TextView
            android:id="@+id/wishlistId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">
            <ImageView
                android:id="@+id/owned"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/star"/>
            <ImageView
                android:id="@+id/locked"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:alpha="0.2"
                app:srcCompat="@drawable/locked"/>
            <ImageView
                android:id="@+id/expand"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:alpha="0.2"
                android:tag="expand"
                app:srcCompat="@drawable/expand"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/wishActionLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:gravity="start|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">
            <ImageView
                android:id="@+id/facebookShare"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:alpha="0"
                android:background="@color/facebook_share"
                android:padding="10dp"
                app:srcCompat="@drawable/sharefacebook"/>
            <ImageView
                android:id="@+id/inviteUser"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:alpha="0"
                android:background="@color/blue_share"
                android:padding="10dp"
                app:srcCompat="@drawable/share"/>
            <ImageView
                android:id="@+id/modifyWishlist"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:alpha="0"
                android:background="@color/green_edit"
                android:padding="10dp"
                app:srcCompat="@drawable/edit"/>
            <ImageView
                android:id="@+id/deleteWishlist"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:alpha="0"
                android:background="@color/red_delete"
                android:padding="10dp"
                app:srcCompat="@drawable/delete"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>